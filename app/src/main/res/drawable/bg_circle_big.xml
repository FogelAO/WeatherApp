<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue bg_circle_big in back -->
    <item>
        <shape android:shape="oval">

            <solid android:color="#91283593" />

            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>
    <!-- Smaller red bg_circle_big in front -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="20dp"
                android:color="@android:color/transparent" />
            <solid android:color="@color/blue800Dark" />
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>
</layer-list>